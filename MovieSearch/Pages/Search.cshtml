@page
@model SearchModel
@{
    ViewData["Title"] = "MovieSearch: API based movie details finder!";
}
<h2>@ViewData["Title"]</h2>
<br/>
<h4>@Model.Message</h4>

<form method="get" action="/Result" runat="server" border="0" cellpadding="0" cellspacing="0" style="width:100%;float:left">
    <div class="input-group">
        <input type="text" name="id" class="form-control" placeholder="Iron Man 3" />
        <input type="submit" value="Search" class="btn btn-primary" style="background:blue" />
    </div>
</form>